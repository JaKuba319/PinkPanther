@model ClientViewModel
@{
    ViewData["Title"] = "Client Page";
}


<h1>
    Modify #@Model.Id client's data:
</h1>

<form asp-controller="Clients" asp-action="Modify" asp-route-id="@Model.Id" class="form-group mb-5">
    <label for="firstName">Input new first name:</label>
    <input type="text" id="firstName" name="firstName" class="form-control" value="@Model.FirstName"/>

    <label for="lastName">Input new last name:</label>
    <input type="text" id="lastName" name="lastName" class="form-control"  value="@Model.LastName"/>

    <label for="birthDate">Input new date of birth:</label>
    <input type="date" id="birthDate" name="birthDate" class="form-control" value="@Model.BirthDate.ToString("yyyy-MM-dd")" />

    <label for="gender">Input new gender:</label>
    <select id="gender" name="gender" class="form-select form-select-sm">
        @if (Model.Gender)
        {
            <option selected value="true">Male</option>
            <option value="false">Female</option>
        }
        else
        {
            <option value="true">Male</option>
            <option selected value="false">Female</option>
        }
    </select>

    <label for="phoneNumber">Input new phone numer:</label>
    <input type="text" id="phoneNumber" name="phoneNumber" class="form-control" value="@Model.PhoneNumber"/>

    <label for="email">Input new email:</label>
    <input type="email" id="email" name="email" class="form-control" value="@Model.Email" />

    <button type="submit" class="btn btn-outline-secondary mt-3">Modify client!</button>
</form>