@model List<ClientViewModel>
@{
    ViewData["Title"] = "Client Page";
}

<form class="form-group">
    <h1>
        Add new client to database:
    </h1>
    <label for="name">Input client's first name:</label>
    <input type="text" id="name" name="name" class="form-control" />

    <label for="lastName">Input client's last name:</label>
    <input type="text" id="lastName" name="lastName" class="form-control" />

    <label for="birth">Input client's date of birth:</label>
    <input type="date" id="birth" name="birth" class="form-control" />

    <label for="sex">Input client's gender:</label>
    <select title="You can't be battle droid! Roger Roger" id="sex" name="sex" class="form-select form-select-sm">
        <option value="1">Male</option>
        <option value="0">Female</option>
        <option value="-1" disabled>Battle droid</option>
    </select>

    <label for="phoneNumber">Input client's phone numer:</label>
    <input type="text" id="phoneNumber" name="phoneNumber" class="form-control" />

    
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Name
            </th>
            <th>
                Last name
            </th>
            <th>
                Phone numer
            </th>
            <th>
                Sex
            </th>
            <th>
                Date of birth
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>
                    @client.Index
                </td>
                <td>
                    @client.Name
                </td>
                <td>
                    @client.LastName
                </td>
                <td>
                    @client.PhoneNumber
                </td>
                <td>
                    @(client.Sex ? "male" : "female")
                </td>
                <td>
                    @client.BirthDate
                </td>
                <td>
                    <a asp-controller="Client" asp-action="Index" asp-route-indexOfAnimal="@client.Index">Show</a>
                </td>
            </tr>
        }
    </tbody>
</table>