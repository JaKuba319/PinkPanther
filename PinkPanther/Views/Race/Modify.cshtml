@model RaceViewModel
@{
    ViewData["Title"] = "Race Page";
}
<h1>
    Race modify
</h1>

<br />

<h3>
    #@Model.Id |
    Race: @Model.RaceName
</h3>

<form asp-action="Change" asp-controller="Race" asp-route-id="@Model.Id">
    <label for="race">
        Input new race:
    </label>
    <input type="text" name="race" id="race" value="@Model.RaceName" />
    <button type="submit" class="btn btn-outline-secondary"> Send </button>
</form>