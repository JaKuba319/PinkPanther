@model RaceViewModel
@{
    ViewData["Title"] = "Race Page";
}
<h1>
    Race modify
</h1>

<br />

<h3>
    #@Model.Id |
    Race: @Model.RaceName
</h3>

<form asp-action="Modify" asp-controller="Race" asp-route-id="@Model.Id" asp-route-typeId="@Model.Type.Id">
    <label for="raceName">
        Input new race:
    </label>
    <input type="text" name="raceName" id="raceName" value="@Model.RaceName" />
    <button type="submit" class="btn btn-outline-secondary"> Send </button>
</form>