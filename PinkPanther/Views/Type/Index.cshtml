@model List<TypeViewModel>
@{
    ViewData["Title"] = "Type Page";
}

<form class="form-group mb-3" asp-action="Add" asp-controller="Type">
    <h1 class="display-5">Add new type of animal:</h1>
    <label for="type">Input type:</label>
    <input type="text" id="type" name="type" class="form-control mb-3" />
    
    <button type="submit" class="btn btn-outline-secondary">Add!</button>
</form>


<h1>Available types:</h1>
<ul class="list-group">
@foreach(var type in Model)
{
        <li class="list-group-item">
            @type.Id | @type.TypeName
            <a asp-controller="Type" asp-action="Modify" asp-route-id="@type.Id" class="btn btn-sm btn-outline-success">
                Modify
            </a>
            <a asp-controller="Type" asp-action="Delete" asp-route-id="@type.Id" class="btn btn-sm btn-outline-danger">
                Delete
            </a>
       </li>
}
</ul>