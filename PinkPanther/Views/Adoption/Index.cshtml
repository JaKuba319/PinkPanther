@model AdoptionDataViewModel
@{
    ViewData["Title"] = "Adoption Page";
}

<form asp-controller="Adoption" asp-action="AdoptConfirmation">
    <h2>
        Select animal to adopt:
    </h2>

    <fieldset>
        <select id="animalId" name="animalId" class="form-select form-select-sm">
        @foreach (var animal in Model.Animals)
        {
                @if (Model.SelectedAnimal != null && animal.Id == Model.SelectedAnimal.Id)
            {
                    <option selected value="@animal.Id">
                        @animal.Id | @animal.Name
                </option>
            }
            else
            {
                    <option value="@animal.Id">
                        @animal.Id | @animal.Name
                </option>
            }
        }
        </select> 
    </fieldset>

    <h2 class="mt-3">
        Select client:
    </h2>

    <fieldset>
        <select id="clientId" name="clientId" class="form-select form-select-sm">
        @foreach (var client in Model.Clients)
        {
                <option value="@client.Id">
                    @client.Id | @client.FirstName @client.LastName
            </option>
            }
        }
        </select>
    </fieldset>

    <button type="submit" class="btn btn-sm btn-outline-secondary mt-3">Send</button>
</form>